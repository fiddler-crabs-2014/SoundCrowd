<h1> Playlists </h1>

<% if @user.id == session[:user_id] %>
  <%= link_to "Add a new Playlist", new_user_playlist_path(@user) %>
<% end %>

<div class="playlists_container">
  <% @playlists.each do |playlist| %>

    <h3 class="links"><%= link_to playlist.name, user_playlist_path(playlist.user, playlist) %>
      <% if signed_in? #@user.id == session[:user_id] %>
        <%= link_to "(Delete)", user_playlist_path(playlist.user, playlist), method: :delete %>
      <% end %>
    </h3>
  <% end %>
</div>

